<div id="form">
  <h2>Login</h2>
  <div class="container">
    <form action="/login" method="POST">
      <label> Username
        <input type="text" name="username" placeholder="creed@thecreep.com" />
      </label>
      <label>Password
        <input type="password" name="password" placeholder="********" />
      </label>
      <button type="submit">Login</button>

      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>
</div>